# Nginx configuration for Tiknix with OpenSwoole backend
#
# This config handles SSL termination and proxies to OpenSwoole.
# Static files are served directly by nginx for better performance.
#
# Usage:
#   1. Copy to /etc/nginx/sites-available/tiknix
#   2. Update server_name and SSL paths
#   3. ln -s /etc/nginx/sites-available/tiknix /etc/nginx/sites-enabled/
#   4. nginx -t && systemctl reload nginx

upstream tiknix_swoole {
    server 127.0.0.1:9501;
    keepalive 64;
}

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name tiknix.example.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name tiknix.example.com;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/tiknix.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/tiknix.example.com/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # HSTS
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Root for static files
    root /var/www/tiknix/public;
    index index.php index.html;

    # Logging
    access_log /var/log/nginx/tiknix.access.log;
    error_log /var/log/nginx/tiknix.error.log;

    # Static files - served directly by nginx
    location /assets/ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 7d;
        add_header Cache-Control "public";
        try_files $uri =404;
    }

    # Favicon
    location = /favicon.ico {
        log_not_found off;
        access_log off;
        try_files $uri =404;
    }

    # Robots.txt
    location = /robots.txt {
        log_not_found off;
        access_log off;
        try_files $uri =404;
    }

    # SSE endpoints - need special proxy settings
    location /sse {
        proxy_pass http://tiknix_swoole;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # SSE-specific settings
        proxy_set_header Connection '';
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 86400s;
        chunked_transfer_encoding off;
    }

    # MCP endpoints
    location /mcp/ {
        proxy_pass http://tiknix_swoole;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection '';

        # Longer timeout for MCP operations
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # WebSocket support (if needed)
    location /ws {
        proxy_pass http://tiknix_swoole;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400s;
    }

    # All other requests to OpenSwoole
    location / {
        proxy_pass http://tiknix_swoole;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection '';

        # Buffering for normal requests
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # Health check endpoint (no logging)
    location = /health {
        access_log off;
        proxy_pass http://tiknix_swoole;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
    }
}
