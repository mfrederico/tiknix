{
    "name": "tiknix/framework",
    "description": "TikNix - A modern PHP framework with auto-routing, simple registration, admin panel, and CLI support",
    "type": "project",
    "keywords": ["framework", "php", "flightphp", "redbean", "bootstrap", "authentication", "cli", "admin-panel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "you@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "flightphp/core": "^3.0",
        "gabordemooij/redbean": "dev-master",
        "monolog/monolog": "^3.5",
        "paragonie/anti-csrf": "^2.3",
        "nesbot/carbon": "^3.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "mailgun/mailgun-php": "For sending emails via Mailgun",
        "aws/aws-sdk-php": "For AWS S3 file storage",
        "predis/predis": "For Redis caching",
        "intervention/image": "For image manipulation",
        "league/oauth2-client": "For OAuth2 social logins"
    },
    "autoload": {
        "psr-4": {
            "app\\": "controls/",
            "app\\Models\\": "models/",
            "app\\BaseControls\\": "controls/BaseControls/"
        },
        "classmap": [
            "models/"
        ],
        "files": [
            "lib/FlightMap.php",
            "lib/CliHandler.php",
            "lib/PermissionCache.php",
            "lib/MarkdownParser.php",
            "lib/CachedDatabaseAdapter.php",
            "lib/RedBeanQueryCache.php",
            "lib/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"copy('conf/config.example.ini', 'conf/config.ini');\"",
            "@php -r \"echo 'Please update conf/config.ini with your settings\\n';\"",
            "@php -r \"echo 'Run the database schema from sql/schema.sql\\n';\""
        ],
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 controls/ models/",
        "cs-fix": "phpcbf --standard=PSR12 controls/ models/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
