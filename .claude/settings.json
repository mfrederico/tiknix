{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Write|Edit|Bash|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/php \"${TIKNIX_PROJECT_ROOT:-$CLAUDE_PROJECT_DIR}\"/scripts/hooks/security-sandbox.php",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/php \"${TIKNIX_PROJECT_ROOT:-$CLAUDE_PROJECT_DIR}\"/scripts/hooks/validate-tiknix-php.php",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/php \"${TIKNIX_PROJECT_ROOT:-$CLAUDE_PROJECT_DIR}\"/scripts/hooks/strip-commit-signature.php",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/php \"${TIKNIX_PROJECT_ROOT:-$CLAUDE_PROJECT_DIR}\"/scripts/hooks/log-activity.php",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/php \"${TIKNIX_PROJECT_ROOT:-$CLAUDE_PROJECT_DIR}\"/scripts/hooks/workbench-response-capture.php",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
